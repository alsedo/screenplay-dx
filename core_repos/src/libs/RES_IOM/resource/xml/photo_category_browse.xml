<?xml version="1.0"?>
<page background="image/browse_bg.jpg">
	<ctrlgrp lbmask="lr">
		<button valkey="PHOTO_FOLDER"
			normal_bg="image/home_photo_folder_sub_icon_n.png"
			focused_bg="image/home_photo_folder_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Folders"/>
		<button valkey="PHOTO_ALL"
			normal_bg="image/home_allphoto_sub_icon_n.png"
			focused_bg="image/home_allphoto_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$All Photos"/>
		<button valkey="PHOTO_DATE"
			normal_bg="image/home_date_sub_icon_n.png"
			focused_bg="image/home_date_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Date"/>
		<button valkey="PHOTO_RECENT"
			normal_bg="image/home_recent_photo_sub_icon_n.png"
			focused_bg="image/home_recent_photo_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Recent"/>
		<button valkey="PHOTO_ALBUM"
			normal_bg="image/home_photo_album_sub_icon_n.png"
			focused_bg="image/home_photo_album_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Photo album"/>
	</ctrlgrp>

	<image image="@@bg-category" x="65" y="38" w="85" h="85"/>
	<text text="@@bg-category-headline" x="157" y="62" w="748" h="42" fontsize="40" textcolor="0xff00AA10" align="left"/>
	<text text="@@bg-category-subline" x="157" y="109" w="748" h="28" fontsize="26" textcolor="0xffffffff" align="left"/>

	<wrapper y="240" w="120" h="150">
		<imgbtn image="@@bg-PHOTO_FOLDER" x="300" x_offset="@@xoffset_PHOTO_FOLDER" disable="@@disable-PHOTO_FOLDER"/>
		<imgbtn image="@@bg-PHOTO_ALL" x="436" disable="@@disable-PHOTO_ALL"/>
		<imgbtn image="@@bg-PHOTO_DATE" x="572" disable="@@disable-PHOTO_DATE"/>
		<imgbtn image="@@bg-PHOTO_RECENT" x="712" disable="@@disable-PHOTO_RECENT"/>
		<imgbtn image="@@bg-PHOTO_ALBUM" x="844" disable="@@disable-PHOTO_ALBUM"/>
	</wrapper>

	<image image="./image/home_category_selection_text_line.png" x="471" y="469" w="317" h="50" bg="1"/>
	<text text="@@text-category" x="240" y="484" w="800" h="28" fontsize="22" textcolor="0xffffff" align="hcenter"/>
	<include filename="./inc_decoration.xml"/>
</page>
