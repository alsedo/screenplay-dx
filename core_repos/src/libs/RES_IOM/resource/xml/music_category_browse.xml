<?xml version="1.0"?>
<page background="image/browse_bg.jpg">
	<ctrlgrp lbmask="lr">
		<button valkey="MUSIC_FOLDER"
			normal_bg="image/home_music_folder_sub_icon_n.png"
			focused_bg="image/home_music_folder_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Folders"/>
		<button valkey="MUSIC_ALL"
			normal_bg="image/home_allmusic_sub_icon_n.png"
			focused_bg="image/home_allmusic_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$All Music"/>
		<button valkey="MUSIC_ARTIST"
			normal_bg="image/home_music_artist_sub_icon_n.png"
			focused_bg="image/home_music_artist_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Artist"/>
		<button valkey="MUSIC_ALBUM"
			normal_bg="image/home_music_album_sub_icon_n.png"
			focused_bg="image/home_music_album_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Album"/>
		<button valkey="MUSIC_GENRE"
			normal_bg="image/home_music_gener_sub_icon_n.png"
			focused_bg="image/home_music_gener_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Genre"/>
		<button valkey="MUSIC_PLAYLIST"
			normal_bg="image/home_now_playlist_sub_icon_n.png"
			focused_bg="image/home_now_playlist_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Playlist"/>
		<button valkey="MUSIC_RECENT"
			normal_bg="image/home_recent_music_sub_icon_n.png"
			focused_bg="image/home_recent_music_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Recent"/>
	</ctrlgrp>

	<image image="@@bg-category" x="65" y="38" w="85" h="85"/>
	<text text="@@bg-category-headline" x="157" y="62" w="748" h="42" fontsize="40" textcolor="0xff00ccea" align="left"/>
	<text text="@@bg-category-subline" x="157" y="109" w="748" h="28" fontsize="26" textcolor="0xffffffff" align="left"/>

	<wrapper y="240" w="120" h="150">
		<imgbtn image="@@bg-MUSIC_FOLDER" x="172" x_offset="@@xoffset_MUSIC_FOLDER" disable="@@disable-MUSIC_FOLDER"/>
		<imgbtn image="@@bg-MUSIC_ALL" x="308" disable="@@disable-MUSIC_ALL"/>
		<imgbtn image="@@bg-MUSIC_ARTIST" x="444" disable="@@disable-MUSIC_ALL"/>
		<imgbtn image="@@bg-MUSIC_ALBUM" x="580" disable="@@disable-MUSIC_ALL"/>
		<imgbtn image="@@bg-MUSIC_GENRE" x="716" disable="@@disable-MUSIC_ALL"/>
		<imgbtn image="@@bg-MUSIC_PLAYLIST" x="852" disable="@@disable-MUSIC_ALL"/>
		<imgbtn image="@@bg-MUSIC_RECENT" x="988" disable="@@disable-MUSIC_RECENT"/>
	</wrapper>

	<image image="./image/home_category_selection_text_line.png" x="471" y="469" w="317" h="50" bg="1"/>
	<text text="@@text-category" x="240" y="484" w="800" h="28" fontsize="22" textcolor="0xffffff" align="hcenter"/>
	<include filename="./inc_decoration.xml"/>
</page>
