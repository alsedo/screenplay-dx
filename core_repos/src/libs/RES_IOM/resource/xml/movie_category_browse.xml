<?xml version="1.0"?>
<page background="image/browse_bg.jpg">
	<ctrlgrp lbmask="lr">
		<button valkey="MOVIE_FOLDER"
			normal_bg="image/home_video_folder_sub_icon_n.png"
			focused_bg="image/home_video_folder_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Folders"/>
		<button valkey="MOVIE_ALL"
			normal_bg="image/home_allvideo_sub_icon_n.png"
			focused_bg="image/home_allvideo_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$All Movies"/>
		<button valkey="MOVIE_RECENT"
			normal_bg="image/home_recent_video_sub_icon_n.png"
			focused_bg="image/home_recent_video_sub_icon_f.png"
			group_valkey="category"
			group_focused_text="$$Recent"/>
	</ctrlgrp>

	<image image="@@bg-category" x="65" y="38" w="85" h="85"/>
	<text text="@@bg-category-headline" x="157" y="62" w="748" h="42" fontsize="40" textcolor="0xffe25d5d" align="left"/>
	<text text="@@bg-category-subline" x="157" y="109" w="748" h="28" fontsize="26" textcolor="0xffffffff" align="left"/>

	<wrapper y="240" w="120" h="150">
		<imgbtn image="@@bg-MOVIE_FOLDER" x="444" x_offset="@@xoffset_MOVIE_FOLDER" disable="@@disable-MOVIE_FOLDER"/>
		<imgbtn image="@@bg-MOVIE_ALL" x="580" disable="@@disable-MOVIE_ALL"/>
		<imgbtn image="@@bg-MOVIE_RECENT" x="716" disable="@@disable-MOVIE_RECENT"/>
	</wrapper>

	<image image="./image/home_category_selection_text_line.png" x="471" y="469" w="317" h="50" bg="1"/>
	<text text="@@text-category" x="240" y="484" w="800" h="28" fontsize="22" textcolor="0xffffff" align="hcenter"/>
	<include filename="./inc_decoration.xml"/>
</page>
