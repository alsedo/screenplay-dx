	config SYSCONFIG_FIRMWARE_NAME_COMPARE
		bool "Check firmware name is sysconfig ?"
		default y if FIRMWARE_WDTV_SMP8654_WISTRON
		default n if FIRMWARE_WDTV_SMP8634_WISTRON
